---

- name: All Partitions
  debug:
    msg:
      - "{{ item.value.partitions.keys() }}"
  loop: "{{ drive | dict2items }}"
  loop_control:
    index_var: i
    label: ""


- name: Flatten Partition List
  set_fact:
    partition: "{{ partition + item.value.partitions.keys() | list }}"
  loop: "{{ drive | dict2items }}"
  loop_control:
    index_var: i
    label: ""


- name: Test
  debug:
    msg: "{{partition}}"
